<Page x:Class="tools.Pages.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:tools.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid>
        <Rectangle Width="170" Height="300" Fill="#F5F5F5" Stroke="#666666"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Логин"/>
            <TextBox Width="100" Name="txbLogin" Margin="5"/>
            <TextBlock Text="Пароль"/>
            <PasswordBox Width="100" Name="psbPassword" Margin="5"/>
            <Button Content="Войти" Style="{StaticResource btnLogin}" 
                    Name="btnConfirm" Click="btnConfirm_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="7"/>
                    </Style>
                </Button.Resources>
            </Button>
            <TextBlock Name="tbWarning" Text="Логин или пароль неверны" 
                       Visibility="Hidden"/>
            <TextBlock Name="tbNoText" Text="Введите логин и пароль" 
                       Visibility="Hidden"/>
        </StackPanel>
    </Grid>
</Page>
